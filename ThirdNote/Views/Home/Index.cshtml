

@model ThirdNote.ViewModels.Dashboard
@*@model IEnumerable<ThirdNote.Models.Note>*@

@{
    ViewBag.Title = "Dashboard";
}

@Html.Partial("~/Views/Home/IronWill.cshtml")
@*<br />*@

<style>
    .table {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>

@if (Model.Pinned.Count() > 0)
{

<table class="table table-sm caption-top mb-3 dir-rtl">
    <caption class="dir-ltr"><img src="~/Content/pin-icon.png" style="width:16px; height:auto;margin-right:5px;" /> <b>Pinned Notes</b></caption>
    <tr class="table-light">
        <th style="width:5%;">
            #
        </th>
        <th style="width:55%;">
            Title
        </th>

        <th style="width:18%;">
            Written Date
        </th>
        <th style="width:4%;">
            Md
        </th>
        <th style="width:4%;">
            Hd
        </th>
        <th style="width:4%;">
            Pin
        </th>

        <th style="width:6%;">
            View
        </th>
        @*<th style="width:160px;"></th>*@
    </tr>

    @foreach (var item in Model.Pinned.OrderBy(p => p.Title))
    {
        <tr class="link-row">

            <td>
                <a href="/Note/Details/@item.Id">@item.Id</a>
            </td>
            <td>
                <a href="/Note/Details/@item.Id"><div class="crop">@item.Title</div></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WrittenDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Markdown)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hidden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewCount)
            </td>

        </tr>

    }

</table>
}

@Html.Partial("~/Views/Note/List.cshtml", Model.Sorted)
